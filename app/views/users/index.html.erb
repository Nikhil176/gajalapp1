<% provide(:title, 'All users') %>
<h1>Users</h1>



<%= form_tag(users_path ,:method => 'get') do %>
<p><%= text_field_tag :search, params[:search],  class: "searchbox" %>

<%= submit_tag "Search" , :name => nil , class: "searchbutton" %></p>
<% end %>

  <ul class="users">
    <%= render @users %>
  </ul>





<% if @users.blank? %>
  <h4>There are no users containing the term <%= params[:search] %>.</h4>
<% end %>
